{
    "name": "Bilboo",
    "description": "Coletor de dados imobili√°rios",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "./popup/assets/images/icon-16x16.png",
        "32": "./popup/assets/images/icon-32x32.png",
        "48": "./popup/assets/images/icon-48x48.png",
        "128": "./popup/assets/images/icon-128x128.png"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./popup/assets/images/icon-16x16.png",
            "32": "./popup/assets/images/icon-32x32.png",
            "48": "./popup/assets/images/icon-48x48.png",
            "128": "./popup/assets/images/icon-128x128.png"
        }
    },
    // "options_page": "options.html",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://*.olx.com.br/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://*.olx.com.br/*"],
        "js": ["./js/collector.js"]
      }
    ]
}